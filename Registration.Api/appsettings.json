{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@mt = 'An unhandled exception has occurred while executing the request.'"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  },
  "DbProvider": {
    "ConnectionStringName": "SqlServerDbConnection"
  },
  "ConnectionStrings": {
    "SqlServerDbConnection": "Database=Registration;Trusted_Connection=True;MultipleActiveResultSets=true",
    "InMemoryDbConnection": "Data Source=DotnetServiceTemplateInMemory;Mode=Memory;Cache=Shared"
  },
  "AllowedHosts": "*"
}
